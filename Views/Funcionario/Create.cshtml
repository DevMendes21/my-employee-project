@model MyEmployeeProject.Models.Funcionario
@{
    ViewData["Title"] = "Novo Funcionário";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2 class="mb-0">
            <i class="fas fa-user-plus me-2 text-primary"></i>
            Novo Funcionário
        </h2>
        <p class="text-muted">Cadastre um novo funcionário no sistema</p>
    </div>
    <div class="col-md-4 text-end">
        <a href="/Funcionario" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Voltar à Lista
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="row">
                <!-- Informações Pessoais -->
                <div class="col-md-6">
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-user me-2"></i>
                        Informações Pessoais
                    </h5>
                    
                    <div class="mb-3">
                        <label class="form-label">Nome Completo *</label>
                        <input type="text" class="form-control" name="Nome" value="@Model?.Nome" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Email *</label>
                        <input type="email" class="form-control" name="Email" value="@Model?.Email" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Telefone *</label>
                        <input type="tel" class="form-control" name="Telefone" value="@Model?.Telefone" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Data de Nascimento</label>
                        <input type="date" class="form-control" name="DataNascimento" value="@Model?.DataNascimento?.ToString("yyyy-MM-dd")">
                    </div>
                </div>
                
                <!-- Informações Profissionais -->
                <div class="col-md-6">
                    <h5 class="mb-3 text-primary">
                        <i class="fas fa-briefcase me-2"></i>
                        Informações Profissionais
                    </h5>
                    
                    <div class="mb-3">
                        <label class="form-label">Cargo *</label>
                        <select class="form-select" name="CargoId" required>
                            <option value="">Selecione um cargo</option>
                            @if (ViewBag.Cargos != null)
                            {
                                @foreach (var cargo in (IEnumerable<MyEmployeeProject.Models.Cargo>)ViewBag.Cargos)
                                {
                                    var selected = Model?.CargoId == cargo.Id ? "selected" : "";
                                    <option value="@cargo.Id" selected="@selected">
                                        @cargo.Nome - @cargo.Nivel (R$ @cargo.SalarioBase.ToString("N2"))
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Departamento *</label>
                        <select class="form-select" name="DepartamentoId" required>
                            <option value="">Selecione um departamento</option>
                            @if (ViewBag.Departamentos != null)
                            {
                                @foreach (var departamento in (IEnumerable<MyEmployeeProject.Models.Departamento>)ViewBag.Departamentos)
                                {
                                    var selected = Model?.DepartamentoId == departamento.Id ? "selected" : "";
                                    <option value="@departamento.Id" selected="@selected">
                                        @departamento.Nome
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Salário *</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" class="form-control" name="Salario" step="0.01" min="0" value="@Model?.Salario" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Data de Contratação *</label>
                        <input type="date" class="form-control" name="DataContratacao" value="@(Model?.DataContratacao.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="Status">
                            @{
                                var statusAtivo = Model?.Status == MyEmployeeProject.Models.StatusFuncionario.Ativo ? "selected" : "";
                                var statusInativo = Model?.Status == MyEmployeeProject.Models.StatusFuncionario.Inativo ? "selected" : "";
                                var statusFerias = Model?.Status == MyEmployeeProject.Models.StatusFuncionario.Ferias ? "selected" : "";
                                var statusLicenca = Model?.Status == MyEmployeeProject.Models.StatusFuncionario.Licenca ? "selected" : "";
                            }
                            <option value="0" selected="@statusAtivo">Ativo</option>
                            <option value="1" selected="@statusInativo">Inativo</option>
                            <option value="2" selected="@statusFerias">Férias</option>
                            <option value="3" selected="@statusLicenca">Licença</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Observações -->
            <div class="row">
                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-sticky-note me-2"></i>
                            Observações
                        </label>
                        <textarea class="form-control" name="Observacoes" rows="3" placeholder="Observações sobre o funcionário...">@Model?.Observacoes</textarea>
                    </div>
                </div>
            </div>
            
            <!-- Botões -->
            <div class="row">
                <div class="col-12">
                    <hr>
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/Funcionario" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Salvar Funcionário
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-preenchimento do salário baseado no cargo selecionado
        document.querySelector('select[name="CargoId"]').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            if (selectedOption.value) {
                const salarioText = selectedOption.text;
                const salarioMatch = salarioText.match(/R\$ ([\d.,]+)/);
                if (salarioMatch) {
                    const salario = salarioMatch[1].replace(/\./g, '').replace(',', '.');
                    document.querySelector('input[name="Salario"]').value = parseFloat(salario).toFixed(2);
                }
            }
        });
    </script>
}
