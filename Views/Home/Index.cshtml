@model List<MyEmployeeProject.Models.Funcionario>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0">
            <i class="fas fa-chart-bar me-2 text-primary"></i>
            Dashboard
        </h2>
        <p class="text-muted">Visão geral do sistema de funcionários</p>
    </div>
</div>

<!-- Estatísticas -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-users fa-2x text-primary mb-3"></i>
                <h4 class="fw-bold">@ViewBag.TotalFuncionarios</h4>
                <p class="text-muted mb-0">Total de Funcionários</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-user-check fa-2x text-success mb-3"></i>
                <h4 class="fw-bold">@ViewBag.FuncionariosAtivos</h4>
                <p class="text-muted mb-0">Funcionários Ativos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-briefcase fa-2x text-warning mb-3"></i>
                <h4 class="fw-bold">@ViewBag.TotalCargos</h4>
                <p class="text-muted mb-0">Cargos Disponíveis</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-building fa-2x text-info mb-3"></i>
                <h4 class="fw-bold">@ViewBag.TotalDepartamentos</h4>
                <p class="text-muted mb-0">Departamentos</p>
            </div>
        </div>
    </div>
</div>

<!-- Funcionários Recentes -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2"></i>
                    Funcionários Cadastrados Recentemente
                </h5>
                <a href="/Funcionario" class="btn btn-outline-primary btn-sm">
                    Ver Todos
                    <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Cargo</th>
                                    <th>Departamento</th>
                                    <th>Status</th>
                                    <th>Data Contratação</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var funcionario in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-user me-2 text-muted"></i>
                                            @funcionario.Nome
                                        </td>
                                        <td>@funcionario.Email</td>
                                        <td>
                                            @if (funcionario.Cargo != null)
                                            {
                                                <span class="badge bg-primary">@funcionario.Cargo.Nome @funcionario.Cargo.Nivel</span>
                                            }
                                        </td>
                                        <td>
                                            @if (funcionario.Departamento != null)
                                            {
                                                @funcionario.Departamento.Nome
                                            }
                                        </td>
                                        <td>
                                            @switch (funcionario.Status)
                                            {
                                                case MyEmployeeProject.Models.StatusFuncionario.Ativo:
                                                    <span class="badge bg-success">Ativo</span>
                                                    break;
                                                case MyEmployeeProject.Models.StatusFuncionario.Inativo:
                                                    <span class="badge bg-danger">Inativo</span>
                                                    break;
                                                case MyEmployeeProject.Models.StatusFuncionario.Ferias:
                                                    <span class="badge bg-warning">Férias</span>
                                                    break;
                                                case MyEmployeeProject.Models.StatusFuncionario.Licenca:
                                                    <span class="badge bg-info">Licença</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@funcionario.DataContratacao.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Nenhum funcionário cadastrado</h5>
                        <p class="text-muted">Comece adicionando funcionários ao sistema.</p>
                        <a href="/Funcionario/Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Cadastrar Primeiro Funcionário
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
